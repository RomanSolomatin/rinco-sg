body
    color #393c44
    line-height 1.5
    font-size 20px
    background-image: url("/assets/img/bg.png"), radial-gradient(circle at 0 0, #0F3476, #87B9D7);
    background-attachment:fixed;
    font-family: 'Open Sans', sans-serif;
    @media screen and (max-width: 600px)
        font-size 15px


h1
    font-family 'Poiret One', cursive
    line-height 1.2
    font-weight 100
    margin-bottom 60px
    font-size 65px
    @media screen and (max-width: 600px)
        font-size 45px

a
    text-decoration none
    color #269DFF

.wow
    visibility:hidden;

.navbar
    text-align right
    margin 0 135px
    height: 60px;
    line-height 80px
    .logo
        color #fff
        float left
        a
            font-size 20px
        @media screen and (max-width: 600px)
            display:none;
    ul
        margin 0
    li
        margin 0 10px
        display inline
    a
        color #fff
        font-size 14px
        transition: all .1s ease-in-out;
        border-bottom 4px solid transparent
        border-top 4px solid transparent
    a:hover, .active
        border-bottom 1px solid #CCE0F3
        border-top 1px solid #CCE0F3
        padding-bottom 13px
        padding-top 13px
    .active
        border-color #6AABBE

    @media screen and (max-width: 600px)
        text-align left
        margin 0

.mac-install
    background black
    border none
    display block;
    width 99%
    overflow hidden
    outline: none;
    box-shadow: none;

.top-container
    color #fff
    height 400px
    text-align center;
    clear both
    p
        font-size 20px
    h1
        font-weight bold
        font-size 50px
        margin 30px 0
        @media screen and (max-width: 600px)
            font-size 40px
    @media screen and (max-width: 600px)
        margin-top 50px
        padding 30px
        height 500px

.gs
    height 200px
img.logo
    display inline-block !important
    margin 0 10px !important
.github
    text-align center
    .stars
        width 80px
    .follow
        width 145px
.github.large
    .stars
        width 130px
    .follow
        width 210px
.btn
    line-height 50px
    display inline-block
    color #fff
    box-shadow: 0 1px 3px 0 rgba(0,0,0,.21);
    height: 54px;
    max-width: 330px;
    width 90%;

    background:linear-gradient(-180deg, #47BDC9 0, #4BB0C4 100%);
    border-radius: 4px;
    color: #fff;
    font-size: 18px;
    text-align: center;
    margin: 30px auto 0;

.btn:hover
    background:linear-gradient(-180deg, #47C9AD 0, #4BB0C4 100%);

.features
    height 600px
    display table
    width 100%
    background-color #fff
    @media screen and (max-width: 600px)
        width auto


.features:nth-child(even)
    background-color #f8f8f8

.showroom
    display table-cell
    vertical-align middle
    .box
        margin 0 70px
        img
            display block
            margin auto
        @media screen and (max-width: 600px)
            margin 15px

.content
    max-width 1248px
    margin auto
    overflow visible

.users
    text-align center
    .user
        margin 0 20px
        display inline-block
        position relative
        @media screen and (max-width: 600px)
            display block
            margin 30px 0

        img
            box-shadow: 0 3px 13px 0 rgba(0,0,0,.11);
            border-radius 50%
            overflow hidden
            transition .2s
        img:hover
            box-shadow: 0 1px 33px 0 rgba(0,0,0,.21);
            transform scale(1.1)
        a
            display inline-block
        span
            display none

.center
    text-align center
.bgless
    background none !important
.doc
    background #fff
    font-size 14px
    pre *
        font-size 13px
    .menu
        transition .2s
        list-style none
        a
            padding 10px
            display inline-block
            width 100%
            i
                visibility hidden
        li:hover
            transition .2s
            background #f8f8f8
            padding-left 5px
            i
                visibility visible
    pre
        margin 30px 0
    .nav-sub
        list-style none

.panel
    margin 50px 20px
.footer
    height 100px
    line-height 100px
    p
        color #fff
        text-align center
